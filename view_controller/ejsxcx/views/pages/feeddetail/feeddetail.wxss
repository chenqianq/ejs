page {
	background: #fafafa;
}
.feeddetail .noresponse{
	background: #fff;
	font-size: 32rpx;
	color: #222;
	font-weight: bold;
	padding: 40rpx 40rpx 60rpx;
	border-top: 1px solid #eee;
}
.feeddetail .response {
	padding-bottom: 60rpx;
	background: #fff;
	border-top: 1px solid #eee;
}
.feeddetail .response view {
	color: #999;
	padding: 40rpx 40rpx 26rpx;
}
.feeddetail .response .con {
	padding: 0 40rpx;
	font-size: 32rpx;
	color: #222;
}
.feeddetail .question {
	padding: 0 40rpx 100rpx 80rpx;
	background: #FAFAFA;
}
.feeddetail .question .tit {
	color: #999;
	padding: 40rpx 0 26rpx;
}
.feeddetail .question .con {
	padding-bottom: 60rpx;
	font-size: 30rpx;
	color: #333;
}
.feeddetail .question .description {
	padding-bottom: 50rpx;
	color: #666;
	font-size: 28rpx;
}
.feeddetail .question image {
	width: 200rpx; height: 200rpx;
	margin-right: 10rpx;
}