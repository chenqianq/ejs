
.fail-wrap {
  width: 670rpx;
  margin: auto;
}
.fail-wrap .fail {
  display: block;
  width: 306rpx;
  height: 100rpx;
  margin-top: 120rpx;
  margin: 120rpx auto;  
}
.fail-wrap .tips1 {
  font-size: 24rpx;
  color: #211111;
  margin-left: 47rpx;
  margin-bottom: 120rpx;
}
.fail-wrap .price {
  width: 100%;
  height: 104rpx;
  line-height: 104rpx;
  border-top: 1px solid #eeeeee;
  border-bottom: 1px solid #eeeeee;
  font-size: 24rpx;
  color: #444444;
  text-indent: 47rpx;
}
.fail-wrap .controlBtn {
  width: 512rpx;
  margin: auto;
  margin-top: 36rpx;
  display: flex;
  justify-content: flex-end;
}
.fail-wrap button::after{
  border: none;
}
.fail-wrap .controlBtn button {
  width: 220rpx;
  height: 72rpx;
  background: none;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #999999;
  border: 1px solid #d8d8d8;
  border-radius: 36rpx;
  margin: 0;
}
.fail-wrap .controlBtn .shop {
  color: #ff658f;
  border: 1px solid #ff8ead;
}